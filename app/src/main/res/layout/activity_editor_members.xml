<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbackgroundColor"
    android:orientation="vertical"
    tools:context="lab.Frontend.New_Reservation.Activities.EditorMembers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_weight="6"
            android:gravity="center_horizontal"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Zurück"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/round"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="BESCHREIBUNG"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/editor_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Sonstiges"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="TEILNEHMER"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/editor_addMembers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="+ Teilnehmer hinzufügen"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/shadow_corner_listitem"/>

        <ListView
            android:id="@+id/detail_choosenMembers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:dividerHeight="20dp"
            android:divider="@android:color/transparent"/>

        <Button
            android:id="@+id/editor_checkEntry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="@drawable/gradient_corner_button"
            android:text="Details prüfen"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>
